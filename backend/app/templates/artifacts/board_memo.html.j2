{% extends "base.html.j2" %}
{% block content %}
<h1>{{ title }}</h1>

<div class="section">
<h2>Subject</h2>
<p>{{ subject }}</p>
</div>

<div class="section highlight">
<h2>Executive Summary</h2>
<p>{{ executive_summary }}</p>
</div>

<div class="section">
<h2>Key Updates</h2>
<ul>{% for u in key_updates %}<li>{{ u }}</li>{% endfor %}</ul>
</div>

<div class="section">
<h2>Financials Summary</h2>
<p>{{ financials_summary }}</p>
</div>

<div class="section">
<h2>Decisions Needed</h2>
<ul>{% for d in decisions_needed %}<li>{{ d }}</li>{% endfor %}</ul>
</div>

<div class="section">
<h2>Appendix</h2>
<ul>{% for a in appendix %}<li>{{ a }}</li>{% endfor %}</ul>
</div>
{% endblock %}
