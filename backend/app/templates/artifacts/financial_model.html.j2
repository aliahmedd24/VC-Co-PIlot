{% extends "base.html.j2" %}
{% block content %}
<h1>{{ title }}</h1>

<div class="section">
<h2>Revenue Projections</h2>
{% if revenue_projections %}
<table>
<tr><th>Period</th><th>Amount</th><th>Assumptions</th></tr>
{% for p in revenue_projections %}<tr><td>{{ p.get('period', 'N/A') }}</td><td>${{ p.get('amount', 0) | int }}</td><td>{{ p.get('assumptions', '') }}</td></tr>{% endfor %}
</table>
{% endif %}
</div>

<div class="section">
<h2>Cost Projections</h2>
{% if cost_projections %}
<table>
<tr><th>Period</th><th>Amount</th></tr>
{% for p in cost_projections %}<tr><td>{{ p.get('period', 'N/A') }}</td><td>${{ p.get('amount', 0) | int }}</td></tr>{% endfor %}
</table>
{% endif %}
</div>

<div class="section highlight">
<h2>Key Metrics</h2>
{% if runway_months is not none %}<p><span class="label">Runway:</span> {{ runway_months }} months</p>{% endif %}
{% if burn_rate is not none %}<p><span class="label">Monthly Burn Rate:</span> ${{ "{:,.0f}".format(burn_rate) }}</p>{% endif %}
</div>

<div class="section">
<h2>Unit Economics</h2>
<table>
<tr><th>Metric</th><th>Value</th></tr>
{% for key, value in unit_economics.items() %}<tr><td>{{ key }}</td><td>{{ value }}</td></tr>{% endfor %}
</table>
</div>

<div class="section">
<h2>Funding Scenarios</h2>
<ul>{% for s in funding_scenarios %}<li><strong>{{ s.get('name', 'Scenario') }}:</strong> {{ s.get('description', '') }}</li>{% endfor %}</ul>
</div>
{% endblock %}
